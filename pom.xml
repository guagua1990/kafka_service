      <version>4.8.2</version>
    </dependency>

    <dependency>
      <groupId>com.liveramp</groupId>
      <artifactId>java_support</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.liveramp</groupId>
      <artifactId>liveramp_hlib</artifactId>
      <version>1.0-SNAPSHOT</version>
    </dependency>

    <dependency>
